//Eliminamos todas las BDs, local no se usa en la replica, sino para configuraciones, ver: https://docs.mongodb.com/manual/reference/local-database/

db.adminCommand("listDatabases").databases.forEach( function (d) {
  if (d.name != "local" && d.name != "admin" && d.name != "config")
     db.getSiblingDB(d.name).dropDatabase();
})
